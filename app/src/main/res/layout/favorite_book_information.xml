<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:padding="8dp"
    android:id="@+id/favorite_container">

    <ImageView
        android:id="@+id/favorite_thumbnail"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favorite_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/favorite_page_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/price_background"
            android:textSize="13sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_menu_book_24" />

        <TextView
            android:id="@+id/favorite_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="2"
            />
        
        <ImageView
            android:id="@+id/iv_delete_favorite_book"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_baseline_delete_24">
        </ImageView>
    </LinearLayout>
</LinearLayout>